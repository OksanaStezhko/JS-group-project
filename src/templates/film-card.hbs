        {{#each this}}
        <li class="film item" data-movieId={{id}}>
          <div href="" class="film__link link">
            {{#if poster_path}}
             <img src={{poster_path}} class="film__img" alt="">
            {{else}}
             <img src="/images/default-opt.jpg" class="film__img" alt="">
             {{/if}}

            <div class="film__content"}>
              <h3 class="film__title">{{title}}</h3>
              <div class="film__info">
                <ul class="film__genres" >
                  {{#each genres}}
                  {{#if @last}} <li class="film__list__genre">{{name}}&#32;</li>
                  {{else}}
                                <li class="film__list__genre">{{name}},&#32;</li>
                  {{/if}}
                 {{/each}}|&#32;{{release_date}}&#32;</ul>
                  <span class="film__average">{{vote_average}}</span></div>
            </div>
          </div>
        </li>
        {{/each}}